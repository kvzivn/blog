@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400');

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
}

body {
  font-size: 16px;
  font-family: 'Source Sans Pro', Helvetica;
  font-weight: 200;
  color: rgba(0,0,0,0.6);
  -webkit-font-smoothing: antialiased;
  background: snow;
}

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
  display: block;
}

header {
  padding-bottom: 40px;
  border-bottom: 1px solid #ccc;
}

footer {
  margin-top: 15px;
  text-align: center;
  -webkit-font-smoothing: subpixel-antialiased;
  font-weight: 400;
}

ul {
  list-style: none;
}

a {
  color: inherit;
  text-decoration: none;
}

h1 {
  display: inline-block;
  font-size: 52px;
  font-weight: 200;
}

h2 {
  font-weight: 400;
}

h3 {
  font-weight: 400;
}

.container {
  margin: 0 auto;
  padding-top: 40px;
  width: 760px;
}

.icon-container {
  display: inline-block;
  float: right;
  margin-top: 20px;
}

.icon {
  width: 36px;
  height: 36px;
  opacity: 0.7;
  margin-right: 15px;
}

.Archive-post {
  display: block;
  padding: 2em 1em;
  border-bottom: 1px solid #ccc;

  &:hover {
    background: rgba(0,0,0,0.7);
    color: snow;
  }
}

