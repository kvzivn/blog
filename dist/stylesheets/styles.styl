@import 'base';
@import 'highlight';

.Rapper {
    margin: 3rem auto 0;
    width: 42rem;
}

.Icon-container {
    margin-top: 0.5rem
}

.Icon {
    width: 2rem;
    height: 2rem;
    opacity: .65;
    margin-left: 1rem;

    &:hover {
        opacity: .5;
    }
}

.Archive {
    margin-bottom: 2rem;
}

    .Archive-post {
        padding: 2rem 0;
        border-bottom: 1px solid #ccc;
    }

    .Archive-postTitle {
        font-size: 1.5rem;
        font-weight: 400;
        -webkit-font-smoothing: antialiased;
    }

    .Archive-postDate {
        display: block;
    }

.Post-header {
    text-align: center;
}

    .Post-date {
        color: lighten(COLORS.text, 50%);
    }

    .Post-tocItem {
        display: block;
    }

    .Post-tocSubItem {
        display: block;
        padding-left: 2rem;
        color: COLORS.text;
    }